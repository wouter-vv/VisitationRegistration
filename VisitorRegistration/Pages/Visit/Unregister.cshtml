@page
@model VisitorRegistration.UnregisterModel

@{
    ViewData["Title"] = "Unregister";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Afmelden</h4>
<hr />

@if (Enumerable.Count(ViewBag.PersonsLoggedIn) != 0)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Visitation.Id" class="control-label">Wie bent u: </label>
                    <select asp-for="Visitation.Id" class="form-control" asp-items="ViewBag.PersonsLoggedIn"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Afmelden " class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{

    <h5>Er is momenteel niemand aangemeld.</h5>
}
<div>
    <a asp-page="/Welcome/Welcome">Terug naar het startscherm</a>
</div>

